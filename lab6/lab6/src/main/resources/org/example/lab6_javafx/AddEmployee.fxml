<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="430.0" prefWidth="630.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab6_javafx.MainUIController">
    <left>
        <VBox fx:id="root_MainUI" alignment="CENTER_LEFT" prefHeight="351.0" prefWidth="246.0" spacing="10" style="-fx-background-color: #1a1a1a;">

            <Button alignment="TOP_RIGHT" contentDisplay="TOP" mnemonicParsing="false" onAction="#exit" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="x" textAlignment="CENTER">
                <font>
                    <Font name="DejaVu Sans Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </Button>

            <Button onAction="#toEmployeeForm" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Employee">
                <font>
                    <Font name="DejaVu Sans Bold" size="14.0" />
                </font>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </Button>

            <Button onAction="#toDisplayData" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #1976D2; -fx-text-fill: white;" text="Show Employees">
                <font>
                    <Font name="DejaVu Sans Bold" size="14.0" />
                </font>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </Button>

            <Button onAction="#toPaymentForm" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #F57C00; -fx-text-fill: white;" text="Generate Payment">
                <font>
                    <Font name="DejaVu Sans Bold" size="14.0" />
                </font>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    <right>
        <VBox fx:id="root_addEmployee" alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #1a1a1a;" BorderPane.alignment="TOP_RIGHT">

            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="22.0" prefWidth="204.0" text="Add Employee" textFill="WHITE">
                <font>
                    <Font name="DejaVu Sans Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets left="50.0" />
                </VBox.margin>
            </Label>

            <TextField fx:id="departmentField" promptText="Department">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </TextField>

            <TextField fx:id="fullNameField" promptText="Full Name">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </TextField>

            <TextField fx:id="positionField" promptText="Position">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </TextField>

            <TextField fx:id="qualificationField" promptText="Qualification">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </TextField>

            <TextField fx:id="hoursWorkedField" promptText="Hours Worked">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </TextField>

            <TextField fx:id="hourlyRateField" promptText="Hourly Rate">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </TextField>

            <Button onAction="#addEmployee" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Employee">
                <font>
                    <Font name="DejaVu Sans Bold" size="14.0" />
                </font>
                <VBox.margin>
                    <Insets left="70.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </right>
</BorderPane>
